{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "out",
    "lib": ["ES2020", "DOM"],
    "sourceMap": true,
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@website/*": ["website/src/*"]
    }
  },
  "include": ["src/**/*", "website/src/parsers/**/*", "website/src/interfaces.ts"],
  "exclude": [
    "node_modules",
    ".vscode-test",
    "ui-tests",
    "website/tests",
    "website/playwright.config.ts"
  ]
}
