{
  "name": "ply-visualizer",
  "displayName": "PLY Pointcloud Visualizer",
  "description": "A 3D visualizer for PLY (Polygon File Format) and XYZ point cloud files using Three.js",
  "version": "1.1.2",
  "publisher": "kleinicke",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/kleinicke/ply-visualizer.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "ply",
    "xyz",
    "3d",
    "point cloud",
    "mesh",
    "visualization",
    "three.js"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "plyViewer.plyEditor",
        "displayName": "PLY Pointcloud Visualizer",
        "selector": [
          {
            "filenamePattern": "*.ply"
          },
          {
            "filenamePattern": "*.xyz"
          },
          {
            "filenamePattern": "*.tif"
          },
          {
            "filenamePattern": "*.tiff"
          },
            {
              "filenamePattern": "*.png"
            },
            {
              "filenamePattern": "*.exr"
            },
            {
              "filenamePattern": "*.pfm"
            },
            {
              "filenamePattern": "*.npy"
            },
            {
              "filenamePattern": "*.npz"
            },
            {
              "filenamePattern": "*.mat"
            },
            {
              "filenamePattern": "*.h5"
            },
          {
            "filenamePattern": "*.obj"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "plyViewer.openFile",
        "title": "Open with PLY Visualizer",
        "category": "PLY Visualizer"
      },
      {
        "command": "plyViewer.openMultipleFiles",
        "title": "Open Multiple Point Cloud Files",
        "category": "PLY Visualizer"
      },
      {
        "command": "plyViewer.convertTifToPointCloud",
        "title": "Convert TIFF to Point Cloud",
        "category": "PLY Visualizer"
      },
      {
        "command": "plyViewer.loadJsonAsPose",
        "title": "Load JSON as 3D Pose",
        "category": "PLY Visualizer"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "plyViewer.openFile",
          "when": "resourceExtname == .ply || resourceExtname == .xyz || resourceExtname == .txt || resourceExtname == .obj",
          "group": "navigation"
        },
        {
          "command": "plyViewer.convertTifToPointCloud",
          "when": "resourceExtname == .tif || resourceExtname == .tiff",
          "group": "navigation"
        },
        {
          "command": "plyViewer.loadJsonAsPose",
          "when": "resourceExtname == .json",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack",
    "watch": "webpack --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test:ui": "npm run compile && node ./out/test/ui-test-runner.js",
    "test:all": "npm run test && npm run test:ui"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/three": "^0.158.0",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.5.1",
    "typescript": "^4.9.4",
    "vscode-extension-tester": "^8.17.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "geotiff": "^2.1.3",
    "upng-js": "^2.1.0",
    "fflate": "^0.8.2",
    "three": "^0.178.0"
  }
}
