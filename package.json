{
  "name": "ply-visualizer",
  "displayName": "PLY Visualizer",
  "description": "A 3D visualizer for PLY (Polygon File Format) files using Three.js",
  "version": "0.0.6",
  "publisher": "kleinicke",
  "repository": {
    "type": "git",
    "url": "https://github.com/kleinicke/ply-visualizer.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "ply",
    "3d",
    "point cloud",
    "mesh",
    "visualization",
    "three.js"
  ],
  "activationEvents": [
    "onCustomEditor:plyViewer.plyEditor"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "plyViewer.plyEditor",
        "displayName": "PLY Visualizer",
        "selector": [
          {
            "filenamePattern": "*.ply"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "plyViewer.openFile",
        "title": "Open with PLY Visualizer",
        "category": "PLY Visualizer"
      },
      {
        "command": "plyViewer.openMultipleFiles",
        "title": "Open Multiple PLY Files",
        "category": "PLY Visualizer"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "plyViewer.openFile",
          "when": "resourceExtname == .ply",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack",
    "watch": "webpack --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@types/mocha": "^10.0.1",
    "@types/glob": "^8.0.0",
    "@types/three": "^0.158.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0",
    "mocha": "^10.2.0",
    "glob": "^8.1.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "ts-loader": "^9.5.1"
  },
  "dependencies": {
    "three": "^0.178.0"
  }
} 