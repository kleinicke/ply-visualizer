{
  "name": "ply-visualizer",
  "displayName": "3D Point Cloud Visualizer (PLY, ...)",
  "description": "A 3D visualizer for Point Cloud files like PLY (Polygon File Format) using Three.js. Supports 13+ formats: PLY, XYZ, OBJ, STL, PCD, PTS, OFF, GLTF/GLB and depth to point cloud conversions.",
  "version": "1.2.4",
  "publisher": "kleinicke",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/kleinicke/ply-visualizer.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "ply",
    "xyz",
    "obj",
    "stl",
    "pcd",
    "pts",
    "off",
    "gltf",
    "glb",
    "xyzn",
    "xyzrgb",
    "tif",
    "tiff",
    "pfm",
    "npy",
    "npz",
    "png",
    "3d",
    "point cloud",
    "pointcloud",
    "mesh",
    "open3d",
    "stereolithography",
    "depth",
    "disparity",
    "visualization",
    "viewer",
    "three.js",
    "camera",
    "pose",
    "depth image",
    "depth map",
    "computer vision",
    "CloudCompare",
    "Cloud"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "plyViewer.plyEditor",
        "displayName": "PLY Pointcloud Visualizer",
        "selector": [
          {
            "filenamePattern": "*.ply"
          },
          {
            "filenamePattern": "*.xyz"
          },
          {
            "filenamePattern": "*.xyzn"
          },
          {
            "filenamePattern": "*.xyzrgb"
          },
          {
            "filenamePattern": "*.obj"
          },
          {
            "filenamePattern": "*.stl"
          },
          {
            "filenamePattern": "*.pcd"
          },
          {
            "filenamePattern": "*.pts"
          },
          {
            "filenamePattern": "*.off"
          },
          {
            "filenamePattern": "*.gltf"
          },
          {
            "filenamePattern": "*.glb"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "plyViewer.openFile",
        "title": "Open with PLY Visualizer",
        "category": "PLY Visualizer"
      },
      {
        "command": "plyViewer.openMultipleFiles",
        "title": "Open Multiple Point Cloud Files",
        "category": "PLY Visualizer"
      },
      {
        "command": "plyViewer.playPointCloudSequence",
        "title": "Play Point Cloud Sequence (Wildcard)",
        "category": "PLY Visualizer"
      },
      {
        "command": "plyViewer.convertTifToPointCloud",
        "title": "Convert TIFF to Point Cloud",
        "category": "PLY Visualizer"
      },
      {
        "command": "plyViewer.loadJsonAsPose",
        "title": "Load JSON as 3D Pose",
        "category": "PLY Visualizer"
      },
      {
        "command": "plyViewer.convertDepthToPointCloud",
        "title": "Convert PFM to Point Cloud",
        "category": "PLY Visualizer"
      },
      {
        "command": "plyViewer.convertNpyToPointCloud",
        "title": "Convert NPY/NPZ to Point Cloud",
        "category": "PLY Visualizer"
      },
      {
        "command": "plyViewer.convertPngToPointCloud",
        "title": "Convert PNG Depth to Point Cloud",
        "category": "PLY Visualizer"
      },
      {
        "command": "plyViewer.convertExrToPointCloud",
        "title": "Convert EXR Depth to Point Cloud",
        "category": "PLY Visualizer"
      },
      {
        "command": "plyViewer.resetSettings",
        "title": "Reset All Settings",
        "category": "PLY Visualizer"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "plyViewer.openFile",
          "when": "resourceExtname == .ply || resourceExtname == .xyz || resourceExtname == .xyzn || resourceExtname == .xyzrgb || resourceExtname == .txt || resourceExtname == .obj || resourceExtname == .stl || resourceExtname == .pcd || resourceExtname == .pts || resourceExtname == .off || resourceExtname == .gltf || resourceExtname == .glb",
          "group": "navigation"
        },
        {
          "command": "plyViewer.convertTifToPointCloud",
          "when": "resourceExtname == .tif || resourceExtname == .tiff",
          "group": "navigation"
        },
        {
          "command": "plyViewer.convertDepthToPointCloud",
          "when": "resourceExtname == .pfm",
          "group": "navigation"
        },
        {
          "command": "plyViewer.convertNpyToPointCloud",
          "when": "resourceExtname == .npy || resourceExtname == .npz",
          "group": "navigation"
        },
        {
          "command": "plyViewer.loadJsonAsPose",
          "when": "resourceExtname == .json",
          "group": "navigation"
        },
        {
          "command": "plyViewer.convertPngToPointCloud",
          "when": "resourceExtname == .png",
          "group": "navigation"
        },
        {
          "command": "plyViewer.convertExrToPointCloud",
          "when": "resourceExtname == .exr",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack",
    "compile:tests": "tsc",
    "compile:all": "npm run compile && npm run compile:tests",
    "watch": "webpack --watch",
    "pretest": "npm run clean && npm run compile:all && npm run lint",
    "clean": "rm -rf out/",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test:coverage": "npm run pretest && NODE_V8_COVERAGE=coverage npm run test",
    "coverage": "npm run test:coverage && npm run coverage:report",
    "coverage:report": "node --experimental-loader ./analyze-coverage.mjs",
    "test:ui": "npm run compile && node ./out/test/ui-test-runner.js",
    "test:all": "npm run test && npm run test:ui",
    "test:exr": "node test_exr_parsing.js",
    "test:stl": "node test-stl.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/pako": "^2.0.4",
    "@types/three": "^0.158.3",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "nyc": "^17.1.0",
    "ts-loader": "^9.5.1",
    "typescript": "^4.9.4",
    "vscode-extension-tester": "^8.17.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@types/js-yaml": "^4.0.9",
    "geotiff": "^2.1.3",
    "js-yaml": "^4.1.0",
    "pako": "^2.1.0",
    "three": "^0.178.0"
  },
  "nyc": {
    "include": [
      "out/**/*.js"
    ],
    "exclude": [
      "out/test/**",
      "node_modules/**",
      "out/extension.js"
    ],
    "reporter": [
      "text",
      "html",
      "lcov"
    ],
    "report-dir": "coverage",
    "all": true,
    "check-coverage": true,
    "lines": 80,
    "functions": 80,
    "branches": 80,
    "statements": 80
  }
}
